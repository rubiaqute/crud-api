{
  "name": "crud-api",
  "version": "1.0.0",
  "scripts": {
    "start:dev": "nodemon --watch src src/index.ts",
    "start:prod": "tsc && node dist/index.js",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/uuid": "^8.3.4",
    "cross-env": "^7.0.3",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
